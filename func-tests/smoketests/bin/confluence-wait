#!/bin/bash

max=300
sleep_interval=5

echo "Waiting for Confluence to come up at $url..."

for i in `seq $max`; do
    # Confluence emits `302` during startup, `200` when ready:
    status=`curl -u $CONFLUENCE_USER:$CONFLUENCE_USER_PWD -s -o /dev/null -w "%{http_code}" $CONFLUENCE_BASE_URL/rest/api/space`
    echo Confluence returned $status
    if [[ $status == "200" ]]; then
        echo OK
        echo Confluence is up and running
        exit 0
    elif [[ $status -ge "500" ]]; then
        echo ERROR
        echo Confluence failed to start due to a server error
        # exit -1
    fi

    /bin/sleep $sleep_interval

done

echo Confluence failed to startup within $max seconds
exit -1
